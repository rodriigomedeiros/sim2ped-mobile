<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:bottom="@dimen/border_top_layout_tips">
        <shape android:shape="rectangle">
            <size android:height="@dimen/border_top_layout_tips" />
            <solid android:color="@color/border_top_tips_orange"/>
        </shape>
    </item> 
    
    <!-- White Top color -->
    <item android:top="@dimen/border_top_layout_tips">
        <shape android:shape="rectangle" >
            <size android:height="@dimen/border_bottom_layout_tips" />
            <solid android:color="@color/border_bottom_box" />
        </shape>
    </item>
    
    <!-- Bottom 1dp Shadow -->
    <item android:bottom="@dimen/border_bottom_layout_tips" android:top="@dimen/border_top_layout_tips">
        <shape android:shape="rectangle" >
            <size android:height="@dimen/border_bottom_layout_tips" />
            <solid android:color="@color/bg_tips_orange" />
        </shape>
    </item>

</layer-list>