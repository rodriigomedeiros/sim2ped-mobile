<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/synchronizeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_layout_main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="0dp"
        android:layout_gravity="left|top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logop"
            android:contentDescription="@string/clear"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fragment_title_procedures_performed"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/fragment_sub_title_procedures_performed"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/list_procedures"
            android:dividerHeight="0dp"
            android:divider="@android:color/transparent"
            android:clickable="false"
            android:listSelector="@android:color/transparent"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/alert_no_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/msg_no_history"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </LinearLayout>

</FrameLayout><!-- From: file:/D:/Dropbox/ProjetosAndroid/SIM2PeD/sIM2PeD/src/main/res/layout/layout_procedures_performed.xml -->