<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="@string/pref_layout">
        <ListPreference
            android:key="PREF_LAYOUT_TIPS"
            android:title="@string/pref_layout_screen_title"
